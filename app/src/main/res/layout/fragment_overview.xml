<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:id="@+id/overview_no_classes_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="No classes to show."
            android:textSize="15sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/overview_current_class_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <RelativeLayout

            android:id="@+id/overview_current_class_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:id="@+id/overview_current_class_card_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp">

                <TextView

                    android:id="@+id/overview_current_class_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp" />

                <TextView

                    android:id="@+id/overview_current_class_card_location_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/overview_current_class_card_title"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/overview_current_class_card_header"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp">

                <ProgressBar

                    android:id="@+id/overview_current_class_card_progress_bar"
                    style="@android:style/Widget.Material.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/primary">

                </ProgressBar>

                <TextView

                    android:id="@+id/overview_current_class_card_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/overview_current_class_card_progress_bar"
                    android:textSize="14sp" />

                <TextView

                    android:id="@+id/overview_current_class_card_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/overview_current_class_card_progress_bar"
                    android:textSize="14sp" />

                <TextView

                    android:id="@+id/overview_current_class_card_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/overview_current_class_card_progress_bar"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/overview_next_classes_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/overview_current_class_card"
        android:layout_margin="16dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp">

            <ExpandableListView

                android:id="@+id/overview_next_classes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:childDivider="#d3d3d3"
                android:dividerHeight="1dp"
                android:scrollbars="none">

            </ExpandableListView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/overview_tomorrow_classes_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/overview_next_classes_card"
        android:layout_margin="16dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp">

            <ExpandableListView

                android:id="@+id/overview_tomorrow_classes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:childDivider="#d3d3d3"
                android:dividerHeight="1dp"
                android:scrollbars="none">

            </ExpandableListView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>