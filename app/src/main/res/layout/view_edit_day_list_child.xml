<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/view_edit_day_list_child_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/add_white"
        android:tint="@color/grey" />

    <TextView

        android:id="@+id/view_edit_day_list_child_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="15sp" />

    <TextView

        android:id="@+id/view_edit_day_list_child_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_edit_day_list_child_text"
        android:layout_marginBottom="7dp"
        android:textSize="12sp" />

    <TextView

        android:id="@+id/view_edit_day_list_child_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="12sp" />

</RelativeLayout>