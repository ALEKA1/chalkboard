<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include

        android:id="@+id/add_class_toolbar"
        layout="@layout/view_toolbar_padded" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:id="@+id/add_class_name_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp">

                <ImageView

                    android:id="@+id/add_class_name_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/name"
                    android:tint="#757575" />

                <EditText

                    android:id="@+id/add_class_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="28dp"
                    android:layout_toRightOf="@id/add_class_name_icon"
                    android:hint="Name"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/add_class_teacher_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/add_class_name_layout"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp">

                <ImageView

                    android:id="@+id/add_class_teacher_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/teacher"
                    android:tint="#757575" />

                <EditText

                    android:id="@+id/add_class_input_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="28dp"
                    android:layout_toRightOf="@id/add_class_teacher_icon"
                    android:hint="Teacher (Optional)"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/add_class_location_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/add_class_teacher_layout"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp">

                <ImageView

                    android:id="@+id/add_class_location_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/location"
                    android:tint="#757575" />

                <EditText

                    android:id="@+id/add_class_input_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="28dp"
                    android:layout_toRightOf="@id/add_class_location_icon"
                    android:hint="Location (Optional)"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </RelativeLayout>

            <FrameLayout

                android:id="@+id/add_class_color_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_class_location_layout"
                android:layout_margin="6dp" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>